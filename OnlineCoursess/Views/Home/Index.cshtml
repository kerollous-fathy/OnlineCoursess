@model OnlineCourses.ViewModels.LandingPageViewModel
@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<section class="hero-section">
    <div class="hero-slider-background">
        <div id="heroImageSlider" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="slider-image-wrapper">
                        <img src="~/images/slider/slider1.jpg" asp-append-version="true" class="d-block w-100" alt="معلم يشرح للطلاب" loading="eager">
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="slider-image-wrapper">
                        <img src="~/images/slider/slider2.jpg" asp-append-version="true" class="d-block w-100" alt="عرض تقديمي" loading="lazy">
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="slider-image-wrapper">
                        <img src="~/images/slider/slider3.jpg" asp-append-version="true" class="d-block w-100" alt="قاعة محاضرات" loading="lazy">
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="slider-image-wrapper">
                        <img src="~/images/slider/slider4.jpg" asp-append-version="true" class="d-block w-100" alt="محاضرة تفاعلية" loading="lazy">
                    </div>
                </div>
            </div>
            
            <!-- Carousel Indicators -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#heroImageSlider" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#heroImageSlider" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#heroImageSlider" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#heroImageSlider" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>

            <!-- Prev/Next controls for manual navigation -->
            <button class="carousel-control-prev" type="button" data-bs-target="#heroImageSlider" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">السابق</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#heroImageSlider" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">التالي</span>
            </button>
        </div>
    </div>

    <div class="hero-content-overlay">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-8">
                    <div class="hero-text-wrapper">
                        <h1 class="hero-title">أفضل فرص للتعلم<br />بين يديك!</h1>
                        <p class="hero-subtitle">ابدأ رحلتك التعليمية اليوم.. وتعلم مهارات تغير مستقبلك.</p>
                        <div class="hero-buttons">
                            <a asp-controller="Student" asp-action="Register" class="btn btn-dark btn-lg"> انضم كطالب</a>
                            <a asp-controller="Instructor" asp-action="Register" class="btn btn-outline-dark btn-lg">انضم كمحاضر</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="watch-courses-section">
    <div class="container-fluid">
        <div class="row align-items-center g-0">
            <div class="col-lg-5">
                <div class="watch-courses-images">
                    <div class="course-image-group">
                        <img src="~/images/land_page/slider%282%291.jpg" asp-append-version="true" alt="دورة تعليمية 1" class="course-img main-img">
                        <img src="~/images/land_page/slider%282%292.jpg" asp-append-version="true" alt="دورة تعليمية 2" class="course-img overlay-img">
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="watch-courses-content">
                    <div class="section-header">
                        <div class="header-accent"></div>
                        <h2 class="section-title">شاهد دوراتنا</h2>
                    </div>
                    <p class="section-description">معلومات لحل الصراع بين المحامين الرئيسيين في الفريق، الكسكيشيك البيروقراطية البيروقراطية</p>
                    <a href="#" class="btn btn-link-discover">
                        اكتشف المزيد <i class="fas fa-chevron-left ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials-section">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-12">
                <h2 class="testimonials-title">نهتم بعملائنا و محاضرينا!</h2>
                <p class="testimonials-subtitle">آرائك هي تكون مفيدة!</p>
            </div>
        </div>
        <div class="row g-4">
            <!-- Left (in RTL: appears visually left) STUDENT: Sushi Mohamed -->
            <div class="col-lg-6">
                <div class="testimonial-card">
                    <div class="testimonial-header">
                        <img src="~/images/humans/human1.jpeg" alt="طالب" class="testimonial-avatar">
                        <div class="testimonial-info">
                            <h5 class="testimonial-name">kerollous fathy</h5>
                            <p class="testimonial-role">طالب</p>
                        </div>
                    </div>
                    <p class="testimonial-text">الدروس هنا لأفضل مشروع تصميم لم أجربها سابقًا أول مشروع تصميم لي إلى الآن.</p>
                    <div class="testimonial-rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                    </div>
                </div>
            </div>
            <!-- Right (in RTL: appears visually right) INSTRUCTOR: Kellous Fathey -->
            <div class="col-lg-6">
                <div class="testimonial-card">
                    <div class="testimonial-header">
                        <img src="~/images/humans/human2.png" alt="محاضر" class="testimonial-avatar">
                        <div class="testimonial-info">
                            <h5 class="testimonial-name">sushi mohamed</h5>
                            <p class="testimonial-role">محاضر</p>
                        </div>
                    </div>
                    <p class="testimonial-text">أنا هنا لأجل عملية تعليم سهلة وممتعة سأريكم خطة كاملة على التطبيق والمواقع والتطبيقات.</p>
                    <div class="testimonial-rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="newsletter-title">لا تفوت أي جديدا!</h2>
                <p class="newsletter-subtitle">تابع برنامجك الالكتروني لتطويرك في المحدثات والمواد الجديدة والحصول على تصفيات الآن</p>
                <div class="newsletter-form">
                    <input type="email" class="newsletter-input" placeholder="Eg: name@gmail.com" required>
                    <button type="submit" class="btn btn-newsletter">اشترك</button>
                </div>
            </div>
        </div>
    </div>
</section>
