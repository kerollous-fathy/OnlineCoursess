@model OnlineCoursess.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Student Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Courses Platform</title>

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body.page-register {
            background-image: url('/images/patterns/back3.png');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
            background-attachment: fixed;
            font-family: 'Cairo', sans-serif;
            min-height: 100vh;
            margin: 0;
        }
        .auth-container { background: transparent !important; }
        .icon-pattern-layer, .vignette-overlay { display: none !important; }
        .auth-container, .auth-wrapper, .auth-box { position: relative; z-index: 1; }
    </style>
</head>
<body class="page-register">

    <div class="auth-container">
        <div class="icon-pattern-layer"></div>
        <div class="vignette-overlay"></div>
        <div class="auth-wrapper">
            <div class="auth-box auth-box-english">
                <div class="auth-header">
                    <h1 class="auth-title">Welcome Back</h1>
                    <p class="auth-subtitle">Sign in to continue your learning journey.</p>
                </div>

                <form asp-action="Login" asp-controller="Student" method="post" class="auth-form">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email address">
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password">
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Remember Me</label>
                    </div>

                    <button type="submit" class="btn btn-register-submit w-100 mb-3">Login</button>

                    <div class="auth-footer">
                        <p class="mb-0">
                            Don't have an account?
                            <a asp-action="Register" asp-controller="Student" class="auth-link">Register New Account</a>
                        </p>
                    </div>

                    <div class="auth-divider mt-3 mb-3">
                        <span>OR</span>
                    </div>

                    <div class="text-center">
                        <p class="mb-0">
                            Are you an Instructor?
                            <a asp-action="Login" asp-controller="Instructor" class="auth-link-instructor">Login as Instructor</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
