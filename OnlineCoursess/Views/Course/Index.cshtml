@model List<OnlineCourses.Models.Course>

@{
    ViewData["Title"] = "All Available Courses";
    Layout = "~/Views/Shared/CatalogLayout.cshtml";
    var activeTab = ViewBag.ActiveTab as string ?? "All"; // default
}

<div class="container my-4">

    @* ğŸ’¡ Tabs for switching between All and Enrolled (only when signed in) *@
    @if (User.Identity.IsAuthenticated)
    {
        <div class="d-flex justify-content-center mb-4">
            <div class="course-tabs" role="tablist">
                <a asp-controller="Student" asp-action="MyCourses"
                   class="course-tab @(activeTab == "Enrolled" ? "active" : string.Empty)">
                    My Enrolled Courses <i class="fas fa-book"></i>
                </a>

                <a asp-controller="Course" asp-action="Index"
                   class="course-tab @(activeTab == "All" ? "active" : string.Empty)">
                    All Courses <i class="fas fa-list"></i>
                </a>
            </div>
        </div>
    }

    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <hr />
</div>

<div class="row">
    @if (Model == null || !Model.Any())
    {
        <p class="text-info">No courses are currently available.</p>
    }
    else
    {
        @foreach (var course in Model)
        {
            // 1. Ø­Ø³Ø§Ø¨ Ù…ØªÙˆØ³Ø· Ø§Ù„ØªÙ‚ÙŠÙŠÙ… (Ù†ÙØ³ Ø§Ù„Ù…Ù†Ø·Ù‚ Ø§Ù„Ø³Ø§Ø¨Ù‚)
            var avgRating = course.Reviews != null && course.Reviews.Any()
            ? course.Reviews.Average(r => r.Rating)
            : 0;

            <div class="col-md-4 mb-5">
                <div class="card course-card shadow-sm">
                    @* ğŸ’¡ ØµÙˆØ±Ø© Ø§Ù„Ø¯ÙˆØ±Ø© *@
                    <img src="~/images/courses/default.jpg" class="card-img-top" alt="@course.Title">

                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            @* ğŸ’¡ Ø§Ù„ØªØµÙ†ÙŠÙ *@
                            <span class="badge bg-primary">@course.Category.CategoryName</span>

                            @* ğŸ’¡ Ø§Ù„ØªÙ‚ÙŠÙŠÙ… ÙˆØ¹Ø¯Ø¯ Ø§Ù„Ù…Ø±Ø§Ø¬Ø¹Ø§Øª *@
                            @if (avgRating > 0)
                            {
                                <span class="text-warning small"><i class="fas fa-star"></i> @avgRating.ToString("F1") (@course.Reviews.Count)</span>
                            }
                            else
                            {
                                <span class="text-muted small">No reviews</span>
                            }
                        </div>

                        <h5 class="card-title">@course.Title</h5>

                        @* ğŸ’¡ ØªÙØ§ØµÙŠÙ„ Ø¥Ø¶Ø§ÙÙŠØ© (Ø§Ù„Ù…Ø¯Ø© ÙˆØ§Ù„Ù…Ø³ØªÙˆÙ‰) *@
                        <div class="course-meta mb-3">
                            <span class="text-muted small me-3"><i class="fas fa-clock"></i> @course.Duration Hrs</span>
                            <span class="text-muted small"><i class="fas fa-chart-line"></i> @course.Level</span>
                        </div>

                        <p class="card-text instructor-name">Instructor: @course.Instructor.FirstName @course.Instructor.LastName</p>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center bg-white border-top-0">
                        @* ğŸ’¡ Ø§Ù„Ø³Ø¹Ø± *@
                        <span class="fs-5 fw-bold text-success">$@course.Price</span>

                        @* Ø²Ø± Ø¹Ø±Ø¶ Ø§Ù„ØªÙØ§ØµÙŠÙ„ *@
                        <a asp-action="Details" asp-controller="Course" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    @{
        // Add any JavaScript for filtering or searching here
    }
}
