@model OnlineCoursess.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "إتمام الدفع";
    Layout = "~/Views/Shared/CheckoutLayout.cshtml";
}

<div class="auth-box auth-box-english w-100" style="max-width:560px;">
    <div class="auth-header text-center">
        <h2 class="auth-title mb-2">إتمام الدفع الآمن</h2>
        <p class="auth-subtitle mb-0">لشراء دورة: @ViewData["CourseTitle"] - @ViewData["Price"]$</p>
    </div>

    <form asp-controller="Payment" asp-action="ProcessPayment" method="post" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <input type="hidden" asp-for="CourseId" />

        <div class="form-group mb-3">
            <label asp-for="CardHolderName" class="form-label">اسم حامل البطاقة</label>
            <input asp-for="CardHolderName" class="form-control" placeholder="الاسم كما يظهر على البطاقة">
            <span asp-validation-for="CardHolderName" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CardNumber" class="form-label">رقم البطاقة</label>
            <input asp-for="CardNumber" class="form-control" placeholder="XXXX XXXX XXXX XXXX">
            <span asp-validation-for="CardNumber" class="text-danger small"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="ExpiryDate" class="form-label">تاريخ الانتهاء (MM/YY)</label>
                <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YY">
                <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="CVV" class="form-label">رمز CVV</label>
                <input asp-for="CVV" class="form-control" placeholder="XXX">
                <span asp-validation-for="CVV" class="text-danger small"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-register-submit w-100 mt-1">ادفع الآن</button>
        @Html.AntiForgeryToken()
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
