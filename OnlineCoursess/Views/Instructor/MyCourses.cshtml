@model List<OnlineCourses.Models.Course>

@{
    ViewData["Title"] = "My Created Courses";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<div class="container-fluid mt-4">
    <h1 class="mb-4 text-center">My Created Courses</h1>
    <p class="lead text-center">View, edit, or manage content for the courses you have created.</p>
    <hr />

    @* 💡 زر جديد لإنشاء دورة *@
    <a asp-controller="Instructor" asp-action="CreateCourse" class="btn btn-primary mb-4">
        <i class="fas fa-plus me-2"></i> Create New Course
    </a>

    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info">You haven't created any courses yet.</div>
        }
        else
        {
            @foreach (var course in Model)
            {
                // 1. حساب متوسط التقييم (منطق الـ Frontend)
                var avgRating = course.Reviews != null && course.Reviews.Any() ? course.Reviews.Average(r => r.Rating) : 0;

                <div class="col-md-4 mb-5">
                    <div class="card course-card shadow-sm">
                        <img src="~/images/courses/default.jpg" class="card-img-top" alt="@course.Title">

                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="badge bg-primary">@course.Category.CategoryName</span>
                                @if (avgRating > 0)
                                {
                                    <span class="text-warning small"><i class="fas fa-star"></i> @avgRating.ToString("F1") (@course.Reviews.Count)</span>
                                }
                                else
                                {
                                    <span class="text-muted small">No reviews</span>
                                }
                            </div>

                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text instructor-name">Instructor: @course.Instructor.FirstName @course.Instructor.LastName</p>
                        </div>

                        <div class="card-footer d-flex justify-content-between align-items-center bg-white border-top-0">
                            <span class="fs-5 fw-bold text-success">$@course.Price</span>

                            @* 💡 زر الإدارة (تعديل أو إضافة محتوى) *@
                            <a asp-action="EditCourse" asp-controller="Instructor" asp-route-id="@course.CourseId" class="btn btn-sm btn-warning text-dark">Manage</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>